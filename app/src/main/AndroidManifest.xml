<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leafcode.petmint">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pet_mint_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/pet_mint_ic_round_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetAdopt">
        <activity
            android:name="com.leafcode.petmint.petDetails.DetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.leafcode.petmint.settings.SettingsActivity"
            android:exported="true" />
        <activity
            android:name="com.leafcode.petmint.locationSelector.LocationSelectorActivity"
            android:exported="true" />
        <activity
            android:name="com.leafcode.petmint.newpet.AddPetActivity"
            android:exported="true" />
        <activity
            android:name="com.leafcode.petmint.helpandsupport.HelpandSupportActivity"
            android:exported="true" />
        <activity
            android:name="com.leafcode.petmint.signOut.SignOutActivity"
            android:exported="true"/>
        <activity
            android:name="com.leafcode.petmint.MainActivity"
            android:exported="true"/>
        <activity
            android:name="com.leafcode.petmint.splashPage.SplashPageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5825309536048570~7099035556" />
    </application>

</manifest>